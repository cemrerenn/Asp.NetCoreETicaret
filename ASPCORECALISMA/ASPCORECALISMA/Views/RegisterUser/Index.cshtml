@model ASPCORECALISMA.Models.UserSignupModel
<body>
    <div class="container" style="width:100%;max-width:100%;padding:20px;height:100%;margin:50px;">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form class="m-t" method="post" role="form" asp-action="Index" enctype="multipart/form-data">
                  
                        <div class="form-group">
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                            <input type="text" class="form-control"  asp-for="@Model.Name" placeholder="Name" required aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                        <br />
                         <div class="form-group">
                        <span asp-validation-for="@Model.Surname" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="@Model.Surname" placeholder=" Surname" required aria-label="Usersurname" aria-describedby="basic-addon1">
                           </div>
                         <br />

                        <div class="form-group">
                        <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                        <input type="email" class="form-control" asp-for="@Model.Mail" placeholder=" Mail" required aria-label="Recipient's username" aria-describedby="basic-addon2">

                        </div>
                        <br />
                        <div class="form-group">
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        <input type="password" class="form-control" asp-for="@Model.Password" placeholder="Şifre" required aria-label="Recipient's username" aria-describedby="basic-addon2">

                        </div>
                        <br />
                        <div class="form-group">
                        <span asp-validation-for="@Model.ConfirmPassWord" class="text-danger"></span>
                        <input type="password" class="form-control" asp-for="@Model.ConfirmPassWord" placeholder="Şifre Tekrar" required aria-label="Recipient's username" aria-describedby="basic-addon2">

                        </div>

                        <br />
                        <div class="form-group">
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        <input type="text" class="form-control" asp-for="@Model.UserName" placeholder="Username" required aria-label="Recipient's username" aria-describedby="basic-addon2">

                        </div>
                        <br />

                        <br />
                        <input type="submit" value="KAYIT OL" />
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    </form>
                
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
