@{

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<ASPCORECALISMA.Models.CategoriesMonth>

<div class="container" style="justify-content: space-between">

    @foreach (var item in Model)
    {
        <form method="post" action="~/Admin/CategoriesMonth">

            <div class="col-sm-4">
                <div class="row text-center slideanim">
                    <div class="thumbnail">
                        <img src="@item.UrunFoto" alt="Ürün Resmi" width="400" height="300">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="foto">Foto</label>
                <input type="text" name="foto" class="form-control" value="@item.UrunFoto">
            </div>
            <div class="form-group">
                <label for="aciklama">Başlık</label>
                <input type="text" name="baslik" class="form-control" value="@item.UrunBaslik">
            </div>
            <input type="hidden" name="id" value="@item.UrunID">
            <input type="submit" value="Güncelle" class="btn btn-warning" />
            <hr />
        </form>
    }




</div>