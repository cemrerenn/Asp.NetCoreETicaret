@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<ASPCORECALISMA.Models.Firmalar>
<div class="card-body" border-collapse: collapse;>
    <h4 style="margin-left:50%;" class="card-title">Firmalar</h4>
    <div class="table-responsive">


        <table class="table" style="width:50%; height:auto;margin-left:250px">

            <thead>
                <tr>
                    <th>
                        Vergi No
                    </th>
                    <th>
                        Firma Logo
                    </th>
                    <th>
                        Firma Adı
                    </th>
                   
                    <th>
                        İl
                    </th>
                    

                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @item.FirmaVergiNo
                        </td>
                        <td>
                            <img class="flex-shrink-0 img-fluid border rounded" src=@item.FirmaLogoUrl alt="" style="width: 50px; height: 50px;">
                        </td>
                        <td>
                            @item.FirmaAdi
                        </td>

                        <td>
                            @item.iller.illerAD
                        </td>

                        
                        <td>
                            <div class="btn-group">
                                <form method="get" action="/Admin/FirmalarList">
                                    <input type="hidden" name="id" value="@item.FirmaID" />
                                    <button type="submit" class="btn btn-outline-primary">Sil</button>
                                </form>
                                
                                <form method="get" action="/Admin/FirmalarDetay" target="_blank">
                                    <input type="hidden" name="id" value="@item.FirmaID" />
                                    <button type="submit" class="btn btn-outline-primary">Görüntüle</button>
                                </form>

                            </div>
                        </td>

                    </tr>

                </tbody>
            }
        </table>
    </div>
</div>
