@{
   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<ASPCORECALISMA.Models.Carousel>

<div class="container" style="justify-content: space-between">

    @foreach (var item in Model)
    {
        <form method="post" action="~/Admin/AdminCarousel">

            <div class="col-sm-4">
                <div class="row text-center slideanim">
                    <div class="thumbnail">
                        <img src="@item.CarouselFotoUrl" alt="Ürün Resmi" width="400" height="300">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="foto">Foto</label>
                <input type="text" name="foto" class="form-control" value="@item.CarouselFotoUrl">
            </div>
            <div class="form-group">
                <label for="aciklama">Başlık</label>
                <input type="text" name="baslik" class="form-control" value="@item.CarouselBaslik">
            </div>

            <div class="form-group">
                <label for="aciklama">AltBaşlık</label>
                <input type="text" name="altbaslik" class="form-control" value="@item.CarouselAltBaslik">
            </div>

            <div class="form-group">
                <label for="aciklama">Açıklama</label>
                <input type="text" name="aciklama" class="form-control" value="@item.CarouselAciklama">
            </div>

            <input type="hidden" name="id" value="@item.CaroueselID">
            <input type="submit" value="Güncelle" class="btn btn-warning" />
            <hr />
        </form>
    }
        
    


</div>