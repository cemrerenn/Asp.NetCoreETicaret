@model List<ASPCORECALISMA.Models.CategoriesMonth>

<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Categories of The Month</h1>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-4 p-3 mt-3">
                <div class="text-center">
                    <a href="#">
                        <img src="@item.UrunFoto" class="rounded-circle img-fluid border" alt="@item.UrunBaslik" style="max-width: 250px; max-height: 250px;">
                    </a>
                    <h5 class="mt-3 mb-3">@item.UrunBaslik</h5>
                    <p>
                        <a href="#" class="btn btn-success">Go Shop</a>
                    </p>
                </div>
            </div>
        }
    </div>
</section>
